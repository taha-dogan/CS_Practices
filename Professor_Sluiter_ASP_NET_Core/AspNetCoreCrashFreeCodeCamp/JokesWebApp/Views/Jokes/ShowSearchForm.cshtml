<div class="row justify-content-center">
    <div class="col-md-6">
        <h4 class="text-center">Search for a Joke</h4>
        <hr />
        <form asp-action="ShowSearchResults">
            <div class="form-group">
                <label for="SearchPhrase" class="control-label sr-only">Search Phrase</label>
                <div class="input-group">
                    <input name="SearchPhrase" class="form-control" placeholder="Enter a keyword" />
                    <div class="input-group-append">
                        <input type="submit" value="Search" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>